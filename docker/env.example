# ============================================================
# AI Blog Bot â€” Environment Configuration
# ============================================================
# Copy this file to .env in the project root:
#   cp docker/env.example .env
# ============================================================

# ---- Docker Compose Profile ----
# Choose: light | balanced | full
# light    = App only (bring your own MySQL)
# balanced = App + MySQL (recommended)
# full     = App + MySQL + Nginx reverse proxy
COMPOSE_PROFILES=balanced

# ---- Application ----
APP_PORT=3000
NODE_ENV=production
VITE_APP_TITLE=AI Blog Bot

# ---- Database (MySQL) ----
# For "balanced" and "full" profiles, these create the DB container:
MYSQL_ROOT_PASSWORD=change_me_root_password
MYSQL_DATABASE=ai_blog_bot
MYSQL_USER=ai_blog_bot
MYSQL_PASSWORD=change_me_db_password
MYSQL_PORT=3306

# For "light" profile, set your external DB URL:
# DATABASE_URL=mysql://user:password@your-db-host:3306/ai_blog_bot

# ---- Authentication (Manus OAuth) ----
JWT_SECRET=change_me_jwt_secret_min_32_chars
VITE_APP_ID=
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=
OWNER_OPEN_ID=
OWNER_NAME=

# ---- Manus Built-in AI (Forge API) ----
# Used as fallback when local LLM is unavailable
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=
VITE_FRONTEND_FORGE_API_KEY=
VITE_FRONTEND_FORGE_API_URL=

# ---- Ollama / Local LLM (External VM) ----
# IP or hostname of the machine running Ollama
# Example: http://192.168.1.100:11434
OLLAMA_HOST=http://192.168.1.100:11434
OLLAMA_MODEL=llama3.2

# ---- Hugo Blog API ----
# Your Hugo admin panel URL and API key
HUGO_API_URL=https://admin.nodkeys.com
HUGO_API_KEY=your_hugo_api_key
